<div class='row mx-auto' style="width: 22rem;" >
  <div class='card mt-4 text-center'>
    <div class='card-header'>
      <h1>Account Login</h1>
    </div>
    <div class='card-body'>
      <form action='/users/signin' method='post'>
        <div class='mb-3'>
          <input
            class='form-control'
            type='email'
            name='email'
            placeholder='Email'
            autofocus
          />
        </div>
        <div class='mb-3'>
          <input
            type='password'
            class='form-control'
            name='password'
            placeholder='Password'
          />
        </div>
        <div class='d-grid gap-2 col-6 mx-auto mb-3'>
          <button type='submit' class='btn btn-primary btn-block'>Sign in</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class='col-md-4'>
  <div class='card'>
    <div class='card-body'>
      <div class='card-header'>
        <h3>Edit Note</h3>
      </div>
      <div class='card-body'>
        <form action='/notes/edit-note/{{note._id}}?_method=PUT' method='POST'>
          <input type='hidden' name='_method' value='PUT' />
          <div class='row mb-3'>
            <input
              type='text'
              name='title'
              class='form-control'
              placeholder='Title'
              value='{{note.title}}'
            />
          </div>
          <div class='row mb-3'>
            <textarea
              name='description'
              class='form-control'
            >{{note.description}}</textarea>
          </div>
          <div class='row mb-3'>
            <button class='btn btn-primary btn-block'>Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>